rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Users can read all user documents (to see names), but only write their own
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Calendar events - shared calendar for all authenticated users
    match /calendarEvents/{eventId} {
      // All authenticated users can read events
      allow read: if request.auth != null;
      // Anyone can create events (with their userId)
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      // Only the creator can update events
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      // Only the creator can delete events
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

  }
}

